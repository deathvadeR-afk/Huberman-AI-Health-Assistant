# Production Environment Variables for Huberman Health AI Assistant
# Copy this file to .env.prod and fill in the actual values

# Application Environment
NODE_ENV=production
PORT=3001

# Database Configuration - Use strong passwords in production
POSTGRES_PASSWORD=your_very_secure_postgres_password_here_min_16_chars
DATABASE_URL=postgresql://huberman_user:your_very_secure_postgres_password_here_min_16_chars@postgres:5432/huberman_health_ai

# Redis Configuration - Use password in production
REDIS_PASSWORD=your_very_secure_redis_password_here_min_16_chars
REDIS_URL=redis://:your_very_secure_redis_password_here_min_16_chars@redis:6379

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Apify Configuration
APIFY_API_TOKEN=your_apify_api_token_here

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars_random
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Feature Flags
VOICE_SEARCH_ENABLED=true
ANALYTICS_ENABLED=true
CACHING_ENABLED=true
